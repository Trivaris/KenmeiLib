-- Table: user_session
CREATE TABLE user_session (
    user_id     INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    token       TEXT    NOT NULL
);

getByUserId:
SELECT * FROM user_session WHERE user_id = ?;

updateTokenForUser:
INSERT OR REPLACE INTO user_session(
    user_id,
    token
) VALUES (
    :userId,
    :token
);